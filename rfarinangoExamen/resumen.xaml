<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="rfarinangoExamen.resumen">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblUsuario" HorizontalTextAlignment="Center" FontSize="16"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Label Text="Nombre" Grid.Row="0" Grid.Column="0"/>
                <Entry x:Name="lblnombreEstudiante" Placeholder="Nombre" Grid.Row="0" Grid.Column="1" IsEnabled="False"/>

                <Label Text="Total" Grid.Row="1" Grid.Column="0"/>
                <Entry x:Name="lblmontoTotal" Keyboard="Numeric" Placeholder="Monto Total" Grid.Row="1" Grid.Column="1" IsEnabled="False"/>

            </Grid>
            <Button x:Name="btnInformacion" Text="Acerca del autor" Clicked="btnInformacion_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>